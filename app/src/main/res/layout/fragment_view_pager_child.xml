<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.administrator.one.fragment.ViewPagerChild">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:id="@+id/home_view_top_view"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:background="@drawable/board"
        android:layout_margin="10dp">

        <ImageView
            android:id="@+id/home_view_imageView"
            android:layout_width="match_parent"
            android:layout_height="260dp"
            android:background="@mipmap/ic_launcher"
          />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="vol"
            android:id="@+id/home_view_vol"
            android:layout_below="@+id/home_view_imageView"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/home_view_author"
            android:layout_below="@+id/home_view_imageView"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/home_view_content"
            android:layout_below="@+id/home_view_vol"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_above="@+id/home_view_time"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/home_view_time"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />


    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_below="@id/home_view_top_view"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="小记"
            android:gravity="center"
            android:id="@+id/main_view_note"
            android:drawableLeft="@drawable/diary_pressed"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:id="@+id/home_view_praise"
            android:text="aaa"
            android:layout_alignParentTop="true"
            android:drawableLeft="@drawable/laud"
            android:layout_alignParentRight="true"
            android:layout_marginRight="100dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:id="@+id/home_view_share"
            android:drawableLeft="@drawable/share_image"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />


    </RelativeLayout>


</RelativeLayout>
